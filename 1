class Product(object):
    def __init__(self, price, item_name, weight, brand, status="for sale"):
        self.price = price
        self.item_name = item_name
        self.weight = weight
        self.brand = brand
        self.status = status
        
    def sell(self):
        self.status = "sold"
        print self.status
        return self
        
    def add_tax(self, tax):
        cost = self.price * tax + self.price
        print cost
        return self
    
    def reason_of_return(self, reason):
        
        if reason == "defective":
            self.status = "defective"
            self.price = 0
            
        elif reason == "Like new":
            self.status = "for sale"
        
        elif reason == "opened":
            self.status = "used"
            self.price = self.price * 0.8
        
        
        print self.status
        print self.price
        
    def display_info(self):
        print self.price, self.item_name, self.weight, self.brand, self.status
        return self
        
   
         
            
product1 = Product(5, "key", 1, "lucky")

product1.sell()

product1.add_tax(0.5)
product1.reason_of_return("opened")
product1.sell().add_tax(0.5).display_info()
