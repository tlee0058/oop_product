class Product(object):
    def __init__(self, price, item_name, weight, brand, status):
        self.price = price
        self.item_name = item_name
        self.weight = weight
        self.brand = brand
        self.status = "for sale"
        
    def sell(self):
        if self.status == False:
            self.status = "sold"
        else:
            self.status = "for sale"
        
        print self.status
        return self
            
product1 = Product(5, "key", 1, "lucky", "pending")

product1.sell()
